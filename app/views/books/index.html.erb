<body>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
		    <td><%= book.body %></td>
		    <td><%= link_to "Show", book_path(book) %></td>
		    <td><%= link_to "Edit", edit_book_path(book) %></td>
		    <td><%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<div class="field">
<label>Title</label>
<%= f.text_field :title %>
</div>
<div class="field2">
<label>Body</label>
<%= f.text_area :body %>
</div>
<div class="create-book">
<%= f.submit 'Create Book' %>
</div>
<% end %>

</body>